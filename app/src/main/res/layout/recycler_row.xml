<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:id="@+id/recycler_row">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="112dp">

            <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    app:srcCompat="@android:drawable/sym_def_app_icon"
                    android:id="@+id/person_1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/group_name"
                    android:layout_marginTop="8dp"
                    app:shapeAppearanceOverlay="@style/profilePictures" />

            <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    app:srcCompat="@android:drawable/sym_def_app_icon"
                    android:id="@+id/person_2"
                    app:layout_constraintStart_toEndOf="@+id/person_1"
                    app:layout_constraintTop_toTopOf="@+id/person_1"
                    app:shapeAppearanceOverlay="@style/profilePictures"
                    android:layout_marginStart="2dp" />

            <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    app:srcCompat="@android:drawable/sym_def_app_icon"
                    android:id="@+id/person_3"
                    app:layout_constraintStart_toEndOf="@+id/person_2"
                    app:layout_constraintTop_toTopOf="@+id/person_2"
                    app:shapeAppearanceOverlay="@style/profilePictures"
                    android:layout_marginStart="2dp" />

            <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    app:srcCompat="@android:drawable/sym_def_app_icon"
                    android:id="@+id/person_4"
                    app:layout_constraintStart_toEndOf="@+id/person_3"
                    app:layout_constraintTop_toTopOf="@+id/person_3"
                    app:shapeAppearanceOverlay="@style/profilePictures"
                    android:layout_marginStart="2dp" />

            <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    app:srcCompat="@android:drawable/sym_def_app_icon"
                    android:id="@+id/person_5"
                    app:layout_constraintStart_toEndOf="@+id/person_4"
                    app:layout_constraintTop_toTopOf="@+id/person_4"
                    app:shapeAppearanceOverlay="@style/profilePictures"
                    android:layout_marginStart="2dp" />

            <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    app:srcCompat="@android:drawable/sym_def_app_icon"
                    android:id="@+id/person_6"
                    app:layout_constraintStart_toEndOf="@+id/person_5"
                    app:layout_constraintTop_toTopOf="@+id/person_5"
                    app:shapeAppearanceOverlay="@style/profilePictures"
                    android:layout_marginStart="2dp" />

            <TextView
                    android:text="GroupName"
                    android:layout_width="143dp"
                    android:layout_height="33dp"
                    android:id="@+id/group_name"
                    android:textSize="24sp"
                    android:textStyle="normal"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp" />

            <TextView
                    android:text="description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/group_description"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/group_name"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="@+id/group_name"
                    app:layout_constraintVertical_bias="1.0"
                    android:textColor="#B3000000" />

            <TextView
                    android:text="99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/people_count"
                    app:layout_constraintEnd_toStartOf="@+id/people_icon"
                    android:layout_marginEnd="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/person_6"
                    android:layout_marginBottom="8dp"
                    android:alpha="0.7" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_people"
                    android:id="@+id/people_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/people_count"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="10dp"
                    android:alpha="0.7" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_online"
                    android:id="@+id/imageView8"
                    app:layout_constraintTop_toTopOf="@+id/group_description"
                    app:layout_constraintEnd_toEndOf="@+id/people_icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>